    "import docx\n",
    "from docx.shared import Cm, RGBColor\n",
    "\n",
    "doc = docx.Document(\"a.docx\") # Load\n",
    "\n",
    "for i in range(len(doc.paragraphs)): # Print all\n",
    "    print( doc.paragraphs[i].text )\n",
    "    # Alter font type\n",
    "    for run in doc.paragraphs[i].runs:\n",
    "        run.font.color.rgb = RGBColor(20,210,20)\n",
    "        \n",
    "doc.add_paragraph(\"Add this line\")   # Insert at last\n",
    "doc.add_picture(\"kangaroo.jpg\", width=Cm(12)) # Insert picture at last\n",
    "\n",
    "doc.save(\"a.docx\")"
